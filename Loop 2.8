#include<iostream>
#include<iomanip>

using namespace std;

int main() {
	int count = 0, n, k1 = 0, k2 = 0;
	double a, sum1 = 0, sum2 = 0;
	cin >> n;
	do {
		cin >> a;
		count++;
		if (count > n) break;
	} while (a != 0.);
	k2++;
	while (count < n) {
		count++;
		cin >> a;
		if (a != 0.) {
			sum1 += a;
		}
		if (a == 0.) {
			k2++;
			sum2 += sum1;
			sum1 = 0;
		}
	}

	if (k2 < 2) cout << 0;
	else {
		cout << fixed << setprecision(3);
		cout << sum2;
	}
}
