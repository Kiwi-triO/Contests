#include<iostream>
#include<iomanip>

using namespace std;

int main() { 
	double fl,su,sum,x;
	int n,ss;
	cin >> n;
	sum = 0;
	su = 0;
	x = 0;
	fl = 0;
	ss = 0;
	for (int i = 0; i < n; i++) {
		cin >> x;
		if (fl == 1) {
			sum += x;
			su += x;
		}
		if (x<0.) {
			fl = 1;
			su = x;
			ss++;
		}
	}
	cout << fixed << setprecision(3);
	(ss < 2) ? cout << 0: cout << sum - su;
	

}
